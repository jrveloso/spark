<% if user_signed_in? %>
<table class="table table-success table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Spark</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @friends.each do |friend| %>
    <% if friend.user == current_user %>
    <tr>
      <td>
        <%= link_to friend.first_name + ' ' + friend.last_name, friend %>
      </td>
      <td><%= friend.spark %></td>
      <td><%= friend.email %></td>
      <td><%= friend.phone %></td>
      <td><%= friend.twitter %></td>
      <td>
        <%= link_to "Delete", friend, data: { turbo_method: :delete, confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm" %>
      </td>
    
    </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to "Add", new_friend_path, class:"btn btn-secondary" %>

<% else %>

<h1>Create a friend list!</h1>


<% end %>


